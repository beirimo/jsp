package model;

import java.sql.*;

public class UserDAO {//Database Access Object
	Connection con=Database.CON;
	
	public UserVO read(String uid) {    // read는 한 행이 리턴이 됨 - ???그래서 어쩌라고 뭔데 그게 ㅠ??? ㅠ 뭔데임마 ㅠ 알았어야지
		UserVO vo=new UserVO();
		try {
			String sql="select * from users where uid=?";
			PreparedStatement ps=con.prepareStatement(sql);
			ps.setString(1, uid);
			ResultSet rs=ps.executeQuery();//셀렉트 한 결과는 rs에 넣어주기 
			if(rs.next()) {
				vo.setUid(rs.getString("uid"));
				vo.setUpass(rs.getString("upass"));
				vo.setUname(rs.getString("uname"));
				vo.setPhone(rs.getString("phone"));
				vo.setAdress1(rs.getString("address1"));
				vo.setAdress2(rs.getString("address2"));
				
			}
		}catch(Exception e) {
			System.out.println("read:" + e.toString());
		}
		return vo;
	}
	
	
}
