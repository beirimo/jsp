<script>
	$(frm).on("submit", fuction(e){
		e.preventDefault();
		const uid=$(frm.uid).val();
		const upass=$(frm.upass).val();
		if(uid==""){
			alert("아이디를 입력하세요!");
		}else if(upass==""){
			alert("비밀번호를 입력하세요!");
		}else{
			//로그인 체크
		}
	});
</script>